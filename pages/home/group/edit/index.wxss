page{
  padding-bottom: 80rpx;
}

.w-100{
  width: 100%;
}

.f-fl{
  float: left;
}

.f-fr{
  float: right;
}

.f-ib{
  display: inline-block;
}

.f-vat{
  vertical-align: top;
}

.f-cb:after,.f-cbli li:after{display:block;clear:both;visibility:hidden;height:0;overflow:hidden;content:".";}
.f-cb,.f-cbli li{zoom:1;}

.f-db{
  display: block;
}

.group-process{
  text-align: center;
	padding-top: 20rpx;
	padding-bottom: 60rpx;
}

.process-header-line{
  width: 102rpx;
	height: 4rpx;
	background-color: #ddd;
	margin-left: 20rpx;
	margin-right: 20rpx;
	position: relative;
	top: -8rpx;
}

.process-body{
  margin-top: 40rpx;
}

.process-step-line{
  width: 110rpx;
  height: 4rpx;
  background: rgba(0,131,123,1);
	margin-left: 20rpx;
	margin-right: 20rpx;
	margin-top: 40rpx;
}

.process-index{
  width: 78rpx;
  height: 78rpx;
  background: rgba(0,131,123,1);
  border-radius: 50%;
	color: white;
	font-size: 48rpx;
	line-height: 78rpx;
	margin: 0 auto;
}

.process-title{
  font-size: 30rpx;
	color: #333;
	line-height: 50rpx;
	margin-top: 10rpx;
}

.process-label{
  font-size: 26rpx;
	color: #B7B7B7;
}

.seg{
  background-color: #f4f4f4;
	height: 20rpx;
}

.shop{
  padding-left: 20rpx;
	padding-right: 20rpx;
	background-color: #f4f4f4;
}

.label{
  color: #9E9E9E;
}

.good-area{
  display: flex;
}

.good-price{
  width: 200rpx;
	text-align: right;
	padding-top: 26rpx;
}

.good-name{
  flex: 1;
	padding-left: 20rpx;
}

.good-name text{
  display: block;
}

.good-count{
  color: #666;
}

.oldprice{
  color: #BCBCBC;
	font-size: 24rpx;
	text-decoration: line-through;
}

.newprice{
  font-weight: bold;
	margin-left: 10rpx;
}

.goods.van-hairline--top-bottom: after {
  border-width: 0 0;
}

.head-image{
  width: 100rpx;
}

.footer{
  display: flex;
	padding-top: 20rpx;
	padding-bottom: 20rpx;
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	background-color: white;
}

.footer-price{
  flex: 1;
	letter-spacing: 2rpx;
	padding-left: 20rpx;
	line-height: 80rpx;
	font-size: 30rpx;
}

.footer-submit.van-button--warning{
  width: 300rpx;
  height: 80rpx;
	line-height: 80rpx;
  background: rgba(246,147,31,1);
  border-radius: 12rpx;	
	margin-right: 20rpx;
}

.price-total{
  color: #F6931F;
	margin-left: 30rpx;
	font-weight: bold;
}

.pay{
  position: fixed;
	left: 0;
	bottom: 0;
	width: 100%;
}