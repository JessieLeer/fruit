.group{
  padding: 30rpx 20rpx;
	border-bottom: #f6f6f6 solid 1rpx;
	display: flex;
}

.group-info{
  flex: 1;
}

.group-avatar{
  width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
	margin-right: 30rpx;
}

.user-name{
  line-height: 100rpx;
}

.group-user{
  margin-right: 30rpx;
}

.group-user-count{
  color: #333;
	font-size: 32rpx;
	margin-top: 12rpx;
}

.group-user-countdonw{
  color: #666;
	font-size: 26rpx;
}

.group-user-count text{
  color: #F6931F;
}

.group-create.van-button--warning{
  width: 160rpx;
  height: 80rpx;
	line-height: 80rpx;
  background: rgba(246,147,31,1);
  border-radius: 12rpx;
	font-size: 32rpx;
	margin-top: 16rpx;
}