page{
  padding-bottom: 420rpx;
}

.w-100{
  width: 100%;
}

.f-fl{
  float: left;
}

.f-fr{
  float: right;
}

.f-ib{
  display: inline-block;
}

.f-vat{
  vertical-align: top;
}

.f-cb:after,.f-cbli li:after{display:block;clear:both;visibility:hidden;height:0;overflow:hidden;content:".";}
.f-cb,.f-cbli li{zoom:1;}

.f-db{
  display: block;
}

.swiper{
  height: 376rpx;
}

.group-bread{
  display: flex;
}

.group-bread-left{
  flex: 1;
	background-color: #D81313;
	padding: 20rpx;
	color: white;
	line-height: 58rpx;
}

.group-bread-right{
  width: 200rpx;
	background-color: #FDCC35;
	padding-left: 30rpx;
	padding-right: 30rpx;
}

.group-bread-price{
  font-size: 46rpx;
	font-weight: bold;
	margin-left: 30rpx;
	margin-right: 30rpx;
}

.price-unit,.group-bread-oldprice{
  font-size: 24rpx;
}

.group-bread-oldprice{
  text-decoration: line-through;
	position: relative;
	top: 6rpx;
}

.group-bread-endtxt{
  color: #D81313;
	font-size: 24rpx;
	margin-top: 10rpx;
	letter-spacing: 10rpx;
	margin-bottom: 6rpx;
}

.time{
  background-color: #333;
	color: white;
	font-size: 24rpx;
	width: 44rpx;
	height: 44rpx;
	line-height: 44rpx;
	text-align: center;
	border-radius: 3rpx;
}

.good-info{
  padding: 20rpx;
	border-bottom: #f2f2f2 solid 1rpx;
}

.good-name{
  font-size: 30rpx;
	font-weight: bold;
}

.good-text,.good-spec{
  font-size: 26rpx;
	color: #666;
}

.good-sold{
  color: #F6931F;
	font-size: 26rpx;
	margin-left: 40rpx;
}

.pick-date{
  font-size: 30rpx;
	color: #333;
	padding: 30rpx 20rpx 30rpx 20rpx;
}

.seg{
  background-color: #f4f4f4;
	height: 20rpx;
}

.opera-title{
  color: #aaa;
	font-size: 30rpx;
}

.opera-group.van-cell{
  padding-left: 20rpx;
	padding-right: 20rpx;
}

.group{
  padding: 30rpx 20rpx;
	border-bottom: #f6f6f6 solid 1rpx;
	display: flex;
}

.group-info{
  flex: 1;
}

.group-avatar{
  width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
	margin-right: 30rpx;
}

.user-name{
  line-height: 100rpx;
}

.group-user{
  margin-right: 30rpx;
}

.group-user-count{
  color: #333;
	font-size: 32rpx;
	margin-top: 12rpx;
}

.group-user-countdonw{
  color: #666;
	font-size: 26rpx;
}

.group-user-count text{
  color: #F6931F;
}

.group-create.van-button--warning{
  width: 160rpx;
  height: 80rpx;
	line-height: 80rpx;
  background: rgba(246,147,31,1);
  border-radius: 12rpx;
	font-size: 32rpx;
	margin-top: 16rpx;
}

.group-process{
  text-align: center;
	padding-top: 20rpx;
	padding-bottom: 60rpx;
}

.process-header-line{
  width: 102rpx;
	height: 4rpx;
	background-color: #ddd;
	margin-left: 20rpx;
	margin-right: 20rpx;
	position: relative;
	top: -8rpx;
}

.process-body{
  margin-top: 40rpx;
}

.process-step-line{
  width: 110rpx;
  height: 4rpx;
  background: rgba(0,131,123,1);
	margin-left: 20rpx;
	margin-right: 20rpx;
	margin-top: 40rpx;
}

.process-index{
  width: 78rpx;
  height: 78rpx;
  background: rgba(0,131,123,1);
  border-radius: 50%;
	color: white;
	font-size: 48rpx;
	line-height: 78rpx;
	margin: 0 auto;
}

.process-title{
  font-size: 30rpx;
	color: #333;
	line-height: 50rpx;
	margin-top: 10rpx;
}

.process-label{
  font-size: 26rpx;
	color: #B7B7B7;
}

.footer{
  display: flex;
	padding-top: 20rpx;
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	background-color: white;
}

.footer-price{
  flex: 1;
	line-height: 110rpx;
	letter-spacing: 2rpx;
	padding-left: 20rpx;
}

.footer-submit.van-button--warning{
  width: 300rpx;
  height: 80rpx;
	line-height: 80rpx;
  background: rgba(246,147,31,1);
  border-radius: 12rpx;	
	margin-right: 20rpx;
}

.group-price{
  color: #F6931F;
	font-size: 46rpx;
	margin-right: 30rpx;
}

.price-unit{
  font-size: 26rpx;
}

.single-price{
  font-size: 26rpx;
	color: #333;
}

.price-unit1{
  font-size: 20rpx;
}