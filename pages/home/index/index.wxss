/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.position {
  background-color: #00837b;
	width: 100%;
	color: white;
	font-size: 30rpx;
	padding-left: 20rpx;
	padding-bottom: 10rpx;
}

.position-icon{
  position: relative;
	top: 4rpx;
}

.w-100{
  width: 100%;
}

.h-100{
  height: 100%;
}

.search-area{
  padding-top: 10rpx;
	padding-bottom: 10rpx;
	display: flex;
	overflow: auto;
	width: 100%;
}

.arrive-time{
  font-size: 32rpx;
	font-family: Source Han Sans CN;
	font-weight: bold;
	font-style: italic;
	color: rgba(0,131,123,1);
	padding-top: 15rpx;
	width: 202rpx;
	text-align: center;
}

.search{
  margin-top: -8rpx;
	flex: 1;
}

.qr{
  width: 60rpx;
	text-align: center;
	padding-top: 10rpx;
	margin-right: 20rpx;
}

.qr-text{
  display: block;
  font-size: 20rpx;
	margin-top: -15rpx;
}

.good-area{
  display: flex;
	width: 100%;
	height: 100%;
}

.good-cate{
  width: 210rpx;
	text-align: center;
	background:rgba(246,246,246,1);
	height: 100%;
	overflow: auto;
}

.good-cate-item{
  font-size: 28rpx;
	font-family: Source Han Sans CN;
	font-weight: 400;
	color: rgba(175,175,175,1);
	padding-top: 30rpx;
	padding-bottom: 30rpx;
	display: block;
}

.active{
  background-color: white;
	color: black;
}

.good-wrapper{
  flex: 1;
	padding-right: 10rpx;
	height: 100%;
	overflow: auto;
}

.van-card{
  background-color: white;
}

.slide-image{
  margin-left: 10rpx;
	margin-right: 10rpx;
}

.seg{
  color: #00837B;
	float: left;
}

.good-item{
  position: relative;
}

.thumb{
  max-width: 200rpx;
}

.good-name{
  font-size: 28rpx;
}

.good-price{
  color: #F6931F;
}

.shopcar,.shopcar-icon{
  position: absolute;
	right: 0;
}

.shopcar{
  right: -20rpx;
  bottom: -10rpx;
}

.shopcar-icon{
  width: 40rpx;
}

.step .minus,.step .plus{
  width: 40rpx;
	height: 40rpx;
}

.step .minus{
  background:rgba(255,255,255,1);
  border:1px solid rgba(175,175,175,1);
  border-radius:50%;
}

.step .plus{
  background:rgba(0,131,123,1);
  border-radius:50%;
	color: white;
}

.step .good-input{
  background-color: white;
	width: 40rpx;
}

.more-text{
  text-align: center;
	color: #AFAFAF;
	font-size: 24rpx;
	display: block;
	padding-top: 20rpx;
	padding-bottom: 20rpx;
}