.card_area{
    padding : 10px 15px;
}
.card{
    width:100%;
    height:166.5px;
    background:linear-gradient(128deg,rgba(255,170,35,1) 0%,rgba(255,113,47,1) 100%);
    border-radius:8px;
}
.num_card{
    padding : 0 9px;
}
.num_card>view:nth-child(1){
    height : 105.5px;
    line-height: 105.5px;
    display: flex;
    border-bottom : 1px solid rgba(255,255,255,0.3);
}
.score_text{
    font-size:14px;
    font-family:Source Han Sans CN;
    font-weight:200;
    color:rgba(255,255,255,1);
    margin-left : 20px;
}
.score{
    font-size:40px;
    font-family:Source Han Sans CN;
    font-weight:bold;
    color:rgba(255,255,255,1);
    text-shadow:0px 3px 6px rgba(21,21,21,0.24);
    margin-left : 42.5px;
}
.info_score{
    display: flex;
    height :  60px;
    justify-content: space-around;
    align-items: center;
}
.info_score view{
    font-size:17px;
    font-family:Source Han Sans CN;
    font-weight:200;
    color:rgba(255,255,255,1);
    width : 100%;
    text-align : center;
    height : 37px;
    line-height : 37px;
}
.info_score view:nth-child(1){
    border-right  : 1px solid rgba(255,255,255,0.1);
}
.cuopon_area{
    padding : 25.5px 9px;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.item_coupon{
    width : 30%;
    margin-bottom : 33px;
}
.coupon_img_area{
    padding : 16.5px 14.5px;
    box-sizing : border-box; 
    width: 100%;
    height : 82.5px;
    border:1px solid rgba(230,230,230,1);
}
.coupon_img_area image{
    width : 100%;
}

.warp_img{
    position: relative;
}
.warp_img image{
    position: absolute;
    z-index : -1;
}
.price_num{
    font-size:18px;
    font-family:Source Han Sans CN;
    font-weight:500;
    color:rgba(255,255,255,1);
    padding-left : 6.5px;
}
.coupon_text{
    font-size:10px;
    font-family:Source Han Sans CN;
    font-weight:500;
    color:rgba(255,255,255,1);
    padding-left : 13px;
}
.coupon_desc{
    padding : 12.5px 0;
    font-size:14px;
    font-family:Source Han Sans CN;
    font-weight:500;
    color:rgba(69,69,69,1);
    text-align : center;
}
.btn_for{
    height:35px;
    background:rgba(255,255,255,1);
    border:1px solid rgba(246,147,31,1);
    border-radius:17.5px;
    font-size:13px;
    font-family:Source Han Sans CN;
    font-weight:500;
    color:rgba(246,147,31,1);
    line-height : 35px;
    text-align : center;
}
.wrap_btn{
    padding : 0 2px 0 6px;
}
image{
    height: auto;
}