<!--page/user/addressManage/addressManage.wxml-->
<view>
   <view wx:if="{{content.length==0}}" class="hasno_area" style="height: 80vh">
    <view class="fix_height">
        <image src="../../../static/image/none.png" mode="widthFix"></image>
      </view>
    <view class="info">暂无收货地址~~</view>
  </view>
  <view wx:else>
    <block wx:for="{{content}}" wx:key="item">
      <view class="address-list" data-id="{{item.id}}">
        <view class="address-content">
          <view style="font-size:32rpx;color:#333;margin-bottom:20rpx;">
            <wxs src="./addressLength.wxs" module="intercept" />
            <view class="" style="float:left;">{{intercept.substr(item.addr+(item.detailAddr == null?'':item.detailAddr))}}
            </view>
						<view class='default' wx:if='{{item.defaultFlag == 1}}'>默认</view>
            <view style="float:left;"
              class="{{item.tag=='家'?'homeSign':(item.tag=='学校'?'eduInstitutionSign':(item.tag=='父母家'?'parentSign':(item.tag=='公司'?'companySign':'')))}}">
            </view>
          </view>
          <view style="font-size:28rpx;color:#b4b4b4;float:left;">
            <view><text>{{item.name}}</text> {{item.mobile}}</view>
          </view>
        </view>
        <view class="edit" bindtap="toEdit" data-id="{{item.id}}">
          <view class="editSign"></view>
          <view>编辑</view>
        </view>
      </view>
    </block>
  </view>
<view style="width:100%;height:132rpx;background:#fff;position:fixed;bottom:0;" bindtap="newAddress">
   <view class="add-addressBtn">
    新增收货地址
  </view>
</view>
 
</view>
